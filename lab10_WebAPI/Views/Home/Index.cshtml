<!DOCTYPE html>
<html ng-app="ordersApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Работа с заказами</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

</head>
    <body>    
        <div class="container">
            <div ng-controller="OrderContorller">
                <div ng-show="summary" class="panel panel-primary">
                    <div class="panel-heading">Все заказы</div>
                    <div class="panel-body">
                        <input type="text" class="form-control" placeholder="Поиск" ng-model="search">
                        <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Название</th>
                                    <th>Количество</th>
                                    <th>Адрес</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="i in orders | filter:search">
                                    <td>{{i.OrderId}}</td>
                                    <td>{{i.Name}}</td>
                                    <td>{{i.Count}}</td>
                                    <td>{{i.Address}}</td>
                                    <td><button class="btn btn-danger btn-xs" ng-click="delete(i.OrderId)">Удалить</button></td>
                                </tr>
                            </tbody>
                        </table>
                        <button class="btn btn-success" ng-click="create()">Создать заказ</button>
                    </div>          
                </div>

                <div ng-show="createblock" class="panel panel-primary">
                    <div class="panel-heading">Добавить заказ</div>
                    <div class="panel-body">
                        <form name="editForm">
                            <div class="form-group">
                                <label>Введите наименование</label>
                                <input type="text" class="form-control" ng-model="newOrder.Name" required placeholder="Введите наименование" />
                            </div>
                            <div class="form-group">
                                <label>Введите количество</label>
                                <input type="number" class="form-control" ng-model="newOrder.Count" required placeholder="Введите количество">
                            </div>
                            <div class="form-group">
                                <label>Введите адрес</label>
                                <input type="text" class="form-control" ng-model="newOrder.Address" required placeholder="Введите адрес">
                            </div>

                            <button type="submit" ng-click="save(editForm)" class="btn btn-default">Сохранить</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        
        <script type="text/javascript" src="~/Scripts/jquery-1.11.2.min.js"></script>
        <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
        <script type="text/javascript" src="~/Scripts/angular-controller.js"></script>
    </body>
</html>




